/* index.wxss */

.container {
    background-image: "/static/cytb.png";
    background-size: cover;
    background-position: bottom center;
    height: 200rpx;
}

.header {
    display: flex;
    align-items: center;
    background-color: rgba(214, 214, 38, 0.425);
    color: black;
    padding: 10rpx;
}

.location-icon {
    background-image: "/static/location-icon.png";
    width: 36rpx;
    height: 36rpx;
}

.location-text {
    margin-left: 10rpx;
    font-size: 36rpx;
}

.location-dropdown {
    background-image: "/static/dropdown-icon.png";
    width: 36rpx;
    height: 36rpx;
}

.search {
    margin: 20rpx;
}

.search-wrapper {
    display: flex;
    align-items: center;
    padding: 10rpx;
    background-color: #ffffff;
    border-radius: 100rpx;
    box-shadow: 0 4rpx 6rpx (255,194,0,rgba(154, 154, 154, 0.37));
}

.search-icon {
    background-image: require("/static/search-icon.png");
    width: 36rpx;
    height: 36rpx;
}

.search-input {
    flex: 1;
    margin-left: 10rpx;
    color: #555;
}

.banner-swiper {
    height: 320rpx;
}

.swiper-image {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}

.notice-bar {
    display: flex;
    align-items: center;
    background-color: #ffffff;
    padding: 20rpx;
    box-shadow: 2rpx 2rpx 6rpx 1px rgba(154, 154, 154, 0.37);
    border-radius: 20rpx;
    margin: 20rpx;
}

.notice-icon {
    background-image: "/static/notification-icon.png";
    width: 36rpx;
    height: 36rpx;
}

.notice-content {
    margin-left: 10rpx;
    color: (255,194,0);
}

.store-item {
    margin: 20rpx;
}

.store-item-container {
    display: flex;
    align-items: center;
    background-color: #ffffff;
    box-shadow: 2rpx 2rpx 6rpx 1px rgba(154, 154, 154, 0.37);
    border-radius: 20rpx;
    margin-bottom: 20rpx;
}

.store-image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 12rpx;
}

.store-info {
    flex: 1;
    padding: 10rpx;
}

.store-name {
    font-size: 28rpx;
    margin-bottom: 10rpx;
    margin-left: 10rpx;
}

.store-rating {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
}

.star-icon {
    /* background-image: "/static/star-icon.png"; */
    background-image: url(/static/star-icon.png);
    width: 36rpx;
    height: 36rpx;
}

.rating-text {
    margin-left: 10rpx;
    color: #ff9e01;
}

.sold-text {
    margin-left: 10rpx;
    color: #555;
}

.store-tags {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 10rpx;
}

.tag {
    padding: 6rpx 10rpx;
    background-color: #0ba1f7;
    color: #ffffff;
    border-radius: 6rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.store-status {
    padding: 10rpx 20rpx;
    background-color:(255,194,0);
    color: #ffffff;
    border-radius: 40rpx;
    margin-left: auto;
    margin-top: 10rpx;
    margin-right: 10rpx;
}

.version-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 20rpx;
    color: #999;
}
