<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ruoyi.dish.mapper.DishDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.ruoyi.dish.domin.dto.DishDTO" id="DishMap">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="categoryId" column="category_id"/>
        <result property="price" column="price"/>
        <result property="image" column="image"/>
        <result property="description" column="description"/>
        <result property="status" column="status"/>

        <collection property="flavors" ofType="com.ruoyi.dish.domin.DishFlavorEntity">
            <id property="id" column="id"/>
            <result property="userId" column="user_id"/>
            <result property="name" column="name"/>
            <result property="value" column="value"/>
        </collection>
    </resultMap>

    <sql id="selectDishVo">
        select id, user_id, name, category_id, price, image, description, status, create_time, update_time, create_user, update_user from sys_dish
    </sql>

    <resultMap type="DishEntity" id="DishResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="name"    column="name"    />
        <result property="categoryId"    column="category_id"    />
        <result property="price"    column="price"    />
        <result property="image"    column="image"    />
        <result property="description"    column="description"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createUser"    column="create_user"    />
        <result property="updateUser"    column="update_user"    />
    </resultMap>

    <select id="getDishWithFlavorById" resultMap="DishMap">
        select d.* ,
               df.id AS flavor_id,
               df.user_id AS flavor_user_id,
               df.dish_id AS flavor_dish_id,
               df.name AS flavor_name,
               df.value AS flavor_value
        from
            sys_dish d
                left outer join
            sys_dish_flavor df on d.id  = df.dish_id
        WHERE
            d.id = #{id}
    </select>

    <select id="pageQuery" resultMap="com.ruoyi.dish.domin.vo.DishVo">
        select d.* , c.name as categoryName
        from sys_dish d left outer join sys_category c on d.category_id  = c.id
        <where>
            <if test="name!= null">
                and  d.name like concat('%',#{name},'%')
            </if>
            <if test="categoryId!= null">
                and  d.category_id = #{categoryId}
            </if>
            <if test="name!= null">
                and  d.status = #{status}
            </if>
        </where>
        order by d.create_time desc 
    </select>

    <select id="selectDishList" parameterType="com.ruoyi.dish.domin.DishEntity" resultMap="DishResult">
        <include refid="selectDishVo"/>
        <where>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
        </where>
    </select>

</mapper>